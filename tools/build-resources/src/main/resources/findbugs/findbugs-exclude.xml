<FindBugsFilter>
	<Match>
		<!-- This method is enhanced (added to bytecode) by OpenJPA. Known issue since 2009-->
		<Class name="~io\.joynr\..*\.entities\..*Entity"/>
		<Method name="pcIsDetached" />
		<Bug pattern="NP_BOOLEAN_RETURN_NULL"/>
	</Match>
	<Match>
		<Class name="~.*\.R\$.*"/>
		<Bug code="Nm"/>
	</Match>
	<!-- Removes all Null-Pointer warnings from demo applications code: -->
	<Match>
		<Package name="~.*\.demoApplications.*" />
		<Bug code="NP"/>
	</Match>
        <Match>
                <Package name="~.*\.systemintegrationtest.*" />
                <Bug code="DM_EXIT"/>
        </Match>
        <Match>
                <Package name="~.*\.performance.*" />
                <Bug code="DM_EXIT"/>
        </Match>
        <Match>
                <Package name="~.*\.interlanguage.*" />
                <Bug code="DM_EXIT"/>
        </Match>
        <Match>
                <Package name="~.*\.demo.*" />
                <Bug code="DM_EXIT"/>
        </Match>
        <Match>
                <Package name="~.*\.examples.*" />
                <Bug code="DM_EXIT"/>
        </Match>
        <Match>
                <Package name="~.*\.examples.*" />
                <Bug code="DM_DEFAULT_ENCODING"/>
        </Match>
	<!-- Nm: Class is not derived from an Exception, even though it is named as such -->
	<Match>
		<Class name="joynr.system.JoynrLoggedException" />
		<Bug pattern="NM_CLASS_NOT_EXCEPTION"/>
	</Match>
	<Match>
                <Class name="io.joynr.messaging.mqtt.paho.client.MqttPahoClient" />
                <Bug pattern="SF_SWITCH_FALLTHROUGH"/>
        </Match>
        <Match>
                <Class name="io.joynr.jeeintegration.context.JoynrJeeMessageContext" />
                <Bug pattern="DC_DOUBLECHECK"/>
        </Match>
        <Match>
                <Class name="io.joynr.integration.AbstractSubscriptionEnd2EndTest" />
                <Bug pattern="NP_NULL_ON_SOME_PATH_EXCEPTION"/>
        </Match>
        <Match>
                <Class name="io.joynr.messaging.sender.AbstractMessageSender" />
                <Bug pattern="IS2_INCONSISTENT_SYNC"/>
        </Match>
        <Match>
                <Class name="io.joynr.messaging.bounceproxy.BounceProxyBroadcaster" />
                <Bug pattern="JLM_JSR166_UTILCONCURRENT_MONITORENTER"/>
        </Match>
        <Match>
                <Class name="io.joynr.messaging.info.PerformanceMeasures" />
                <Bug pattern="NP_NONNULL_RETURN_VIOLATION"/>
        </Match>
        <Match>
                <Class name="io.joynr.messaging.http.operation.HttpCommunicationManagerTest" />
                <Bug pattern="ST_WRITE_TO_STATIC_FROM_INSTANCE_METHOD"/>
        </Match>
        <Match>
                <Class name="io.joynr.messaging.http.operation.LongPollingMessageReceiver" />
                <Bug pattern="NP_NONNULL_PARAM_VIOLATION"/>
        </Match>
        <Match>
                <Class name="io.joynr.messaging.http.operation.LongPollingMessageReceiver" />
                <Bug pattern="IS2_INCONSISTENT_SYNC"/>
        </Match>
        <Match>
                <Class name="io.joynr.messaging.http.operation.LongPollingChannelLifecycle" />
                <Bug pattern="IS2_INCONSISTENT_SYNC"/>
        </Match>
        <Match>
                <Class name="io.joynr.messaging.http.operation.LongPollingChannelLifecycle" />
                <Bug pattern="SWL_SLEEP_WITH_LOCK_HELD"/>
        </Match>
        <Match>
                <Class name="io.joynr.proxy.invocation.StatelessAsyncMethodInvocation" />
                <Bug pattern="EI_EXPOSE_REP"/>
        </Match>
        <Match>
                <Class name="io.joynr.runtime.AbstractRuntimeModule" />
                <Bug pattern="URF_UNREAD_FIELD"/>
        </Match>
        <Match>
                <Class name="io.joynr.Reply" />
                <Bug pattern="EI_EXPOSE_REP"/>
        </Match>
	<!-- remove all null pointer warnings from tests -->
	<Match>
		<Class name="~.*\.*Tests" />
		<Bug code="NP" /> 
	</Match>
	<Match>
		<Class name="~.*\.*Test" />
		<Bug code="NP" />
	</Match>
</FindBugsFilter>
